---

<!-- Nav widget -->

<% nav = () => %>
  <nav class="nav-big">
    <ul class="unstyled">
      <li><a class="nav-link info" data-id="info" href="#info">About</a></li>
      <li><a class="nav-link shop" data-id="shop" href="#shop">Shop</a></li>
    </ul>
  </nav>
<% end %>

<!-- Content -->

<header id="top">
  <div class="fb-like-box" data-href="http://www.bermudasf.com" data-width="50" data-show-faces="false" data-stream="false" data-header="false"></div>
  <aside>
    <div class="logo">Bermuda SF</div>
    <%= nav() %>
  </aside>
</header>

<a id="scroll-to-top" href="#top" data-id="top">(Scroll to top)</a>

<div class="nav-container">
  <%= nav() %>
</div>

<section id="info">
  <section class="post about">
    <h2 class="zagged">Info</h2>
    <div class="description">
      <%- @document.meta.about %>
    </div>
  </section>

  <section class="post ordering">
    <h2 class="zagged">Ordering</h2>
    <div class="description">
      <%- @document.meta.ordering %>
    </div>
  </section>
</section>

<section id="shop">
  <% for category, i in @document.meta.categories: %>
    <section class="post <%- category.name.toLowerCase() %>">
      <h2 class="zagged"><%- category.name %></h2>
      <% for item in category.items: %>
        <div class="description bag-description">
          <%- item.description %>
        </div>
        <aside class="item-info">
          <div class="tag price">$<%- item.price %></div>
          <!--<a class="tag btn details">View details</div>-->
          <a href="mailto:bermudasf@gmail.com?subject=<%- encodeURIComponent(item.id + ' Order') %>&body=<%- encodeURIComponent('Order for: ' + item.id + '\n\n' + 'How we gunna do this? Please provide all details needed to get you your bag!') %>"
              class="tag btn order-email">
            Order by email
          </a>
          <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
            <input type="hidden" name="cmd" value="_xclick">
            <input type="hidden" name="business" value="35YSFN7VHS2QC">
            <input type="hidden" name="lc" value="US">
            <input type="hidden" name="item_name" value="<%- item.id %>">
            <input type="hidden" name="amount" value="<%- item.price %>">
            <input type="hidden" name="currency_code" value="USD">
            <input type="hidden" name="button_subtype" value="services">
            <input type="hidden" name="shipping" value="12.95">
            <input type="hidden" name="bn" value="PP-BuyNowBF:btn_buynowCC_LG.gif:NonHosted">
            <button type="submit" class="tag btn order">Order by PayPal</button>
          </form>
        </aside>
        <div class="clearfix"></div>
        <div class="item">
          <ul class="low-res">
            <% for path in item.low_res: %>
              <li><img draggable="false" src="<%- @document.meta.path + path %>"></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </section>
  <% end %>
</section>

<footer>
  <ul>
    <li>
      <a href="https://github.com/sfrdmn/bermudasf.com">Source</a>
    </li>
    <li>
      <a href="#" id="imprint-link">Imprint</a>
    </li>
    <li>
      <div class="peace">âœŒ</div>
    </li>
  </ul>
</footer>

